{% extends 'base.html.twig' %}
{% block title %}My cool blog posts{% endblock %}

{% block body %}
    <br>
    <br>
    <form action="{{ path('persona_show') }}" method="post" class="form-horizontal">
        <div class="form-group">
            <div class="col-md-1">{{ form_label(form.nombre,null, {'label_attr': {'class': 'col-2 control-label'}}) }}</div>
            <div class="col-md-3">
                {{ form_widget(form.nombre) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-1">{{ form_label(form.apellido,null, {'label_attr': {'class': 'col-2 control-label'}}) }}</div>
            <div class="col-md-3">
                {{ form_widget(form.apellido) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-1">{{ form_label(form.dni,null, {'label_attr': {'class': 'col-2 control-label'}}) }}</div>
            <div class="col-md-3">
                {{ form_widget(form.dni) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-1">{{ form_label(form.empresa,null, {'label_attr': {'class': 'col-2 control-label'}}) }}</div>
            <div class="col-md-3">{{ form_widget(form.empresa, {'label_attr': {'class': 'col-2 control-label'}}) }}</div>

        </div>

        {{ form_row(form._token) }}
        <!--     <input type="submit" class="btn btn-primary col-md-offset-3"/>       -->
        {{ form_widget(form.Guardar,{'attr': {'class': 'btn btn-primary col-md-offset-2'}}) }}
        {{ form_widget(form.Resetear,{'attr': {'class': 'btn btn-primary col-md-offset-0'}}) }}
    </form>
{% endblock %}